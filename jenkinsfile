pipeline{
	agent any

		parameters{
			string(name:'tag', description:'tag para ejecuciÃ³n de tarea gradle: ')
		}
		tools{
			gradle 'gradle-7.6'
		}
		stages{
			stage('runWithCucumber'){
				steps{
					sh 'gradle -q runWithCucumber -P tags=${tag}'
                    sh 'bash tarea.sh'
				}
			}
		}

}
